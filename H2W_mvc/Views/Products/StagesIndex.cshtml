@using H2W_lib;

<h2>Positioning Stages</h2>
<div style="height:7px;"></div>

<div id="pageContainer">
    @{
        int myStep = 1;
        List<tblCategory> featlist = ViewBag.featlist;
        foreach (var item in featlist)
        {
            <img src="@item.FeaturedThumbnail" onclick="window.location='/category/@item.CategoryPageUrl'" class="hrc" />
            if(myStep < 5){
                <div class="spc">&nbsp;</div>
                myStep++;
            }else{
                <div class="clr">&nbsp;</div>
                myStep = 1;
            }
        }
            
    }
    <div style="clear:both"></div>
</div>