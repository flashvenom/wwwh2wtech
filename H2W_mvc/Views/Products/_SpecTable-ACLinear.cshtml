@model  H2W_mvc.ViewModels.CategoryVM

<table class="specTable">
    <thead>
    <tr style="background-color:#eee;">
        <th>Model #</th>
        <th>Thumbnail</th>
        <th>Duty Cycle</th>
        <th>Force @@ Duty Cycle</th>
        <th>Power @@ Duty Cycle</th>
        <th>Current @@ Duty Cycle</th>
        <th>Length</th>
        <th>Width</th>
        <th>Weight</th>
        <th>PDF</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model.products) {
        
        <tr style="border-bottom:1px solid #ccc;">
            <td>
                @Html.ActionLink(item.ProductNo, "show", "product", new { category = item.tblCategory.CategoryPageUrl, productid = item.ProductNo }, null)
            </td>
            <td>
                <a href="../product/@item.tblCategory.CategoryPageUrl/@item.ProductNo">
                    @{
                        if (item.ThumbnailPath == null)
                        {
                            <img src="/Images/Thumbnails/noimage.gif" />
                        }
                        else
                        {
                            if (item.ThumbnailPath.Length != 0)
                            {
                                <img src="@item.ThumbnailPath" />
                            }
                            else
                            {
                                <img src="/Images/Thumbnails/noimage.gif" />
                            }
                        }
                    }
                </a>
            </td>
            <td>
                @item.tblProductSpecs.Where(c => c.CatSpecId == 1175).FirstOrDefault().SpecValue1@item.tblProductSpecs.Where(c => c.CatSpecId == 1175).FirstOrDefault().tblCategorySpecificSpec.Units1
            </td>
            <td>
                @item.tblProductSpecs.Where(c => c.CatSpecId == 79).FirstOrDefault().SpecValue1 @item.tblProductSpecs.Where(c => c.CatSpecId == 79).FirstOrDefault().tblCategorySpecificSpec.Units1
                <div class="specLine"></div>
                @item.tblProductSpecs.Where(c => c.CatSpecId == 79).FirstOrDefault().SpecValue2 @item.tblProductSpecs.Where(c => c.CatSpecId == 79).FirstOrDefault().tblCategorySpecificSpec.Units2
            </td>

            <td>
                @item.tblProductSpecs.Where(c => c.CatSpecId == 1178).FirstOrDefault().SpecValue1&nbsp;
                @item.tblProductSpecs.Where(c => c.CatSpecId == 1178).FirstOrDefault().tblCategorySpecificSpec.Units1
            </td>
            <td>
                @item.tblProductSpecs.Where(c => c.CatSpecId == 81).FirstOrDefault().SpecValue1
                @item.tblProductSpecs.Where(c => c.CatSpecId == 81).FirstOrDefault().tblCategorySpecificSpec.Units1
            </td>
            <td>
                @item.tblProductSpecs.Where(c => c.CatSpecId == 82).FirstOrDefault().SpecValue1
                @item.tblProductSpecs.Where(c => c.CatSpecId == 82).FirstOrDefault().tblCategorySpecificSpec.Units1
                <div class="specLine"></div>
                @item.tblProductSpecs.Where(c => c.CatSpecId == 82).FirstOrDefault().SpecValue2 
                @item.tblProductSpecs.Where(c => c.CatSpecId == 82).FirstOrDefault().tblCategorySpecificSpec.Units2
            </td>
            <td>
                @item.tblProductSpecs.Where(c => c.CatSpecId == 83).FirstOrDefault().SpecValue1
                @item.tblProductSpecs.Where(c => c.CatSpecId == 83).FirstOrDefault().tblCategorySpecificSpec.Units1
                <div class="specLine"></div>
                @item.tblProductSpecs.Where(c => c.CatSpecId == 83).FirstOrDefault().SpecValue2 
                @item.tblProductSpecs.Where(c => c.CatSpecId == 83).FirstOrDefault().tblCategorySpecificSpec.Units2
            </td>
            <td>
                @item.tblProductSpecs.Where(c => c.CatSpecId == 84).FirstOrDefault().SpecValue1
                @item.tblProductSpecs.Where(c => c.CatSpecId == 84).FirstOrDefault().tblCategorySpecificSpec.Units1
                <div class="specLine"></div>
                @item.tblProductSpecs.Where(c => c.CatSpecId == 84).FirstOrDefault().SpecValue2 
                @item.tblProductSpecs.Where(c => c.CatSpecId == 84).FirstOrDefault().tblCategorySpecificSpec.Units2
            </td>
            <td valign="center">
                @{
                    if (item.PDFDoc != null){
                        if (item.PDFDoc.Length > 0){
                            <a href="@item.PDFDoc" target="_blank">
                                <img src="~/Images/pdficon.png" />
                            </a>
                        }
                    }
                }
            </td>
        </tr>
    }
    </tbody>
</table>
<link href="/Content/dataTables.css" rel="stylesheet" type="text/css" />
<script type="text/javascript" src="/Scripts/jquery.datatables.js"></script>
<script type="text/javascript">
$(document).ready(function() {
    $('.specTable').dataTable({
        "bPaginate": false,
        "aoColumns": [
                null,
                null,
                null,
                { "sType": "numeric-comma" },
                { "sType": "numeric-comma" },
                { "sType": "numeric-comma" },
                { "sType": "numeric-comma" },
                { "sType": "numeric-comma" },
                { "sType": "numeric-comma" },
                null
        ]
    });
});
</script>