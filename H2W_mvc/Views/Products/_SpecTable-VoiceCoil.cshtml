function switchToNcc() {
    $('#ncmbox').fadeOut('fast', function () {
        $('#nccbox').fadeIn('fast');
        $('#nccSelect').addClass('boxSelectOn');
        $('#nccSelect').removeClass('boxSelectOff');
        $('#ncmSelect').addClass('boxSelectOff')
        $('#ncmSelect').removeClass('boxSelectOn');
        location.hash = "nccbox1";
    });
}

function switchToNcm() {
    $('#nccbox').fadeOut('fast', function () {
        $('#ncmbox').fadeIn('fast');
        $('#ncmSelect').addClass('boxSelectOn')
        $('#ncmSelect').removeClass('boxSelectOff');
        $('#nccSelect').addClass('boxSelectOff');
        $('#nccSelect').removeClass('boxSelectOn');
        location.hash = "ncmbox1";
    });
}
</script>