@model  H2W_mvc.ViewModels.CategoryVM

<table class="specTable">
    <thead>
    <tr style="background-color:#eee;">
        <th>Model #</th>
        <th>Thumbnail</th>
        <th>Stroke</th>
        <th>Force @@ 100% Duty</th>
        <th>Force @@ 10% Duty</th>
        <th>Bearing Type</th>
        <th>Encoder Resolution</th>
        <th>Motor P/N</th>
        <th>PDF</th>
    </tr>

    </thead>
    <tbody>
    @foreach (var item in Model.products) {
        <tr style="border-bottom:1px solid #ccc;">
            <td>
                @Html.ActionLink(item.ProductNo, "show", "product", new { category = item.tblCategory.CategoryPageUrl, productid = item.ProductNo }, null)
            </td>
            <td>
                <a href="../product/@item.tblCategory.CategoryPageUrl/@item.ProductNo">
                    @{
                        if (item.ThumbnailPath == null)
                        {
                            <img src="/Images/Thumbnails/noimage.gif" />
                        }
                        else
                        {
                            if (item.ThumbnailPath.Length != 0)
                            {
                                <img src="@item.ThumbnailPath" />
                            }
                            else
                            {
                                <img src="/Images/Thumbnails/noimage.gif" />
                            }
                        }
                    }
                </a>
            </td>
            <td>
                @item.tblProductSpecs.Where(c => c.CatSpecId == 169).FirstOrDefault().SpecValue1 @item.tblProductSpecs.Where(c => c.CatSpecId == 169).FirstOrDefault().tblCategorySpecificSpec.Units1
                <div class="specLine"></div>
                @item.tblProductSpecs.Where(c => c.CatSpecId == 169).FirstOrDefault().SpecValue2 @item.tblProductSpecs.Where(c => c.CatSpecId == 169).FirstOrDefault().tblCategorySpecificSpec.Units2
            </td>
            <td>
                @item.tblProductSpecs.Where(c => c.CatSpecId == 125).FirstOrDefault().SpecValue1 @item.tblProductSpecs.Where(c => c.CatSpecId == 125).FirstOrDefault().tblCategorySpecificSpec.Units1
                <div class="specLine"></div>
                @item.tblProductSpecs.Where(c => c.CatSpecId == 125).FirstOrDefault().SpecValue2 @item.tblProductSpecs.Where(c => c.CatSpecId == 125).FirstOrDefault().tblCategorySpecificSpec.Units2
            </td>
            <td>
                @item.tblProductSpecs.Where(c => c.CatSpecId == 126).FirstOrDefault().SpecValue1 @item.tblProductSpecs.Where(c => c.CatSpecId == 126).FirstOrDefault().tblCategorySpecificSpec.Units1
                <div class="specLine"></div>
                @item.tblProductSpecs.Where(c => c.CatSpecId == 126).FirstOrDefault().SpecValue2 @item.tblProductSpecs.Where(c => c.CatSpecId == 126).FirstOrDefault().tblCategorySpecificSpec.Units2
            </td>
            <td>
                @item.tblProductSpecs.Where(c => c.CatSpecId == 170).FirstOrDefault().SpecValue1
            </td>
            <td>
                @item.tblProductSpecs.Where(c => c.CatSpecId == 171).FirstOrDefault().SpecValue1 @item.tblProductSpecs.Where(c => c.CatSpecId == 171).FirstOrDefault().tblCategorySpecificSpec.Units1
            </td>
            <td>
                @item.tblProductSpecs.Where(c => c.CatSpecId == 1265).FirstOrDefault().SpecValue1
            </td>
             <td valign="center">
                @{
                    if (item.PDFDoc != null){
                        if (item.PDFDoc.Length > 0){
                            <a href="@item.PDFDoc" target="_blank">
                                <img src="~/Images/pdficon.png" />
                            </a>
                        }
                    }
                }
            </td>
        </tr>
     
    }
    </tbody>
</table>

<link href="/Content/dataTables.css" rel="stylesheet" type="text/css" />
<script type="text/javascript" src="/Scripts/jquery.datatables.js"></script>
<script type="text/javascript">
$(document).ready(function() {
    $('.specTable').dataTable({
        "bPaginate": false,
        "aoColumns": [
                null,
                null,
                { "sType": "numeric-comma" },
                { "sType": "numeric-comma" },
                { "sType": "numeric-comma" },
                null,
                { "sType": "numeric-comma" },
                null,
                null
        ]
    });
});
</script>