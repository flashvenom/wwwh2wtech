@model H2W_lib.tblProductSpec

@Html.Partial("_AdminMenu")

<script type="text/javascript" src="../../scripts/jHtmlArea-0.7.5.min.js"></script>
<link rel="Stylesheet" type="text/css" href="../../content/jHtmlArea.css" />
<script type="text/javascript">
    $(function() {
        $("#DescriptionBot").htmlarea();
        $("#Description").htmlarea();
        $("#DescriptionTop").htmlarea();
    });
    jQuery.browser = {};
    jQuery.browser.mozilla = /mozilla/.test(navigator.userAgent.toLowerCase()) && !/webkit/.test(navigator.userAgent.toLowerCase());
    jQuery.browser.webkit = /webkit/.test(navigator.userAgent.toLowerCase());
    jQuery.browser.opera = /opera/.test(navigator.userAgent.toLowerCase());
    jQuery.browser.msie = /msie/.test(navigator.userAgent.toLowerCase());
</script>
<style type="text/css">
    #DescriptionBot {
        width: 835px;
        height: 100px;
        background-color:#fff;
    }
    
    .tbCls {
        width: 950px;
        height: 100px;
        background-color:#fff;
    }

    .editor-field ul {
        padding-left: 0px;
    }

    .text-box {
        width: 500px;
        padding:4px;
        margin-bottom:8px;
    }

</style>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)

    <h2>Edit Specification - @Html.Raw(Model.tblCategorySpecificSpec.SpecName)</h2>

    <fieldset>
        <legend>tblProductSpec</legend>
        pSpecId: @Html.EditorFor(model => model.PSpecId)<br />
        ProductId: @Html.EditorFor(model => model.ProductId)<br />
        SpecValue: @Html.EditorFor(model => model.SpecValue)<br />
        CatSpecId: @Html.EditorFor(model => model.CatSpecId)<br />




        <div class="editor-label">
            @Html.LabelFor(model => model.SpecValue1)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.SpecValue1)
            @Html.ValidationMessageFor(model => model.SpecValue1)
            @Html.Raw(Model.tblCategorySpecificSpec.Units1)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.SpecValue2)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.SpecValue2)
            @Html.ValidationMessageFor(model => model.SpecValue2)
            @Html.Raw(Model.tblCategorySpecificSpec.Units2)
        </div>

        <p>
            <input type="submit" value="Save" />
        </p>
    </fieldset>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
